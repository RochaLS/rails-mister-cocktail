<div class="container">
  <h1><%= @cocktail.name %></h1>
  <h3>Description</h3>
  <% @doses.each do |dose| %>
    <ul>
      <li><p><%= dose.ingredient.name %> - <%= dose.description %></p></li>
  </ul>
  <%= link_to "Remove Dose", dose_path(dose.id), class: "btn btn-warning", method: :delete%>
  <% end %>
  <hr>
  <p><%= link_to "Add a Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>
  <%= link_to "Back to Cocktails", cocktails_path, class: "btn btn-primary"%></p>
</div>




