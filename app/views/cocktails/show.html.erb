<!-- <div class="container"> -->
  <div class="cocktail-box">
    <div class="cocktail-content">
      <h1><%= @cocktail.name %></h1>
      <h3>Description</h3>
      <% @doses.each do |dose| %>
        <ul>
          <li><p><%= dose.description %> - <%= dose.ingredient.name %> <%= link_to '<i class="fas fa-trash"></i>'.html_safe, dose_path(dose.id), method: :delete%></p></li>
      </ul>
      <% end %>
      <hr>
      <div class="add-button">
      <p><%= link_to "Add a Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%></p>
      </div>
      <p> <%= link_to "Back to Cocktails", cocktails_path, class: "btn btn-primary"%></p>
      </div>

      <div class="cocktail-picture">
        <% if @cocktail.photo.url.nil? %>
            <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0) 100%), url('https://images.unsplash.com/photo-1514362545857-3bc16c4c7d1b?ixlib=rb-0.3.5&s=168d2e520f42299d9a648e79d8d85d62&auto=format&fit=crop&w=1950&q=80');">
              <% else %>
         <%= cl_image_tag @cocktail.photo, height: 400, width: 500, crop: :fill %>
         <% end %>
    </div>
  </div>
